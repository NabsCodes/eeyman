<% layout('layouts/boilerplate-auth.ejs') %>

<form action="/admin/login" method="POST">
  <%- include('../partials/adminflash.ejs') %>
  <h1 class="h4 mb-3 fw-normal">Please Log in</h1>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="username" name="username" placeholder="username" />
    <label class="text-secondary" for="username">Username</label>
  </div>
  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
    <label class="text-secondary" for="password">Password</label>
  </div>

  <div class="form-check d-flex justify-content-between my-3">
    <div>
      <input class="form-check-input" type="checkbox" value="true" name="rememberMe" id="rememberMe" />
      <label class="form-check-label small-text" for="rememberMe">Remember me </label>
    </div>
    <div>
      <div class="d-flex align-items-center toggle-password">
        <span class="small mx-2 small-text">Show Password</span>
        <i class="bi bi-eye"></i>
      </div>
    </div>
  </div>
  <button class="btn btn-secondary w-100 py-2" type="submit">Log in</button>
  <p class="mt-3 mb-3 text-center footer-fs">&copy; <span id="year"></span> Eeyman. All rights reserved.</p>
</form>