<% layout('layouts/boilerplate-auth.ejs') %>

<form action="/admin/reset-password/<%= userId %>" method="POST">
  <%- include('../partials/adminflash.ejs') %>
  <h1 class="h4 mb-3 fw-normal">Reset Password</h1>

  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New Password" />
    <label class="text-secondary" for="newPassword">New Password</label>
  </div>
  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" />
    <label class="text-secondary" for="confirmPassword">Confirm Password</label>
  </div>
  <div class="d-flex justify-content-end toggle-password mb-3">
    <span class="small mx-2 small-text">Show Password</span>
    <i class="bi bi-eye"></i>
  </div>

  <button class="btn btn-secondary w-100 py-2" type="submit">Reset Password</button>
  <p class="mt-3 mb-3 text-center footer-fs">&copy; <span id="year"></span> Eeyman. All rights reserved.</p>
</form>